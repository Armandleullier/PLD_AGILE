<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="1050.0" maxWidth="1680.0" style="-fx-background-color: darkgrey;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controler.Controller">
    <HBox minHeight="60.0" style="-fx-background-color: darkgrey;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
      <children>
        <Button fx:id="LoadMap" mnemonicParsing="false" onAction="#LoadMap" prefHeight="37.0" prefWidth="166.0" text="Load Map" translateX="20.0" translateY="10.0">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
        <Button fx:id="LoadRequests" disable="true" mnemonicParsing="false" onAction="#LoadRequests" prefHeight="40.0" prefWidth="203.0" text="Load Requests" translateX="880.0" translateY="10.0">
          <font>
              <Font size="18.0" />
          </font>
        </Button>
      </children>
    </HBox>
   <SplitPane dividerPositions="0.6573676680972819" maxHeight="800.0">
     <items>
       <AnchorPane>
            <children>
                <Pane fx:id="overlay" onZoom="#Zoom" prefHeight="800.0" prefWidth="1000.0" translateX="30.0">

               </Pane>
            </children>
         </AnchorPane>
       <VBox>
           <AnchorPane fx:id="myPane" maxHeight="800.0" minHeight="200.0" minWidth="300.0" VBox.vgrow="ALWAYS" />
           <HBox alignment="CENTER" maxHeight="30.0">
               <Button fx:id="addRequest" disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#addRequest" prefHeight="30.0" prefWidth="120.0" text="Add request" HBox.hgrow="ALWAYS" />
               <Button fx:id="deleteRequest" disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#deleteRequest" prefHeight="30.0" prefWidth="120.0" text="Delete Request" HBox.hgrow="ALWAYS" />
           </HBox>
       </VBox>
     </items>
   </SplitPane>
   <HBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" prefHeight="100.0" VBox.vgrow="ALWAYS" style="-fx-background-color: darkgrey;">
      <children>
         <Pane maxHeight="0.0" maxWidth="0.0" prefHeight="0.0" prefWidth="0.0">
            <children>
               <Button fx:id="btn_zoom" onAction="#Zoom" prefHeight="30.0" prefWidth="30.0" text="+" translateY="-100.0" />
                <Button fx:id="btn_unzoom" onAction="#UnZoom" prefHeight="30.0" prefWidth="30.0" text="-" translateX="50.0" translateY="-100.0" />
            </children>
         </Pane>
          <VBox alignment="CENTER">
              <children>
                  <Button fx:id="undo" mnemonicParsing="false" onAction="#undo" text="Undo">
                  <VBox.margin>
                     <Insets bottom="5.0" />
                  </VBox.margin></Button>
                  <Button fx:id="redo" mnemonicParsing="false" onAction="#redo" text="Redo">
                  <VBox.margin>
                     <Insets top="5.0" />
                  </VBox.margin>
               </Button>
              </children>
          </VBox>

         <TextArea fx:id="TextArea" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="64.0" prefWidth="514.0" text="Please load a map" editable="false">
            <font>
               <Font name="System Bold" size="18.0" />
            </font>
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin>
         </TextArea>
         <Button fx:id="confirmAction" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#confirmAction" prefHeight="50.0" prefWidth="88.0" text="Confirm" visible="false" HBox.hgrow="ALWAYS">
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin></Button>
         <Button fx:id="btn_compute" mnemonicParsing="false" onAction="#computeTour" prefHeight="40.0" prefWidth="150.0" text="Compute" style="-fx-border-color: black;">
            <font>
               <Font size="17.0" />
            </font>
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin>
         </Button>
         <Button fx:id="btn_export" mnemonicParsing="false" onAction="#ExportRoadMap" prefHeight="38.0" prefWidth="161.0" text="Export RoadMap" style="-fx-border-color: black;">
            <font>
               <Font size="17.0" />
            </font>
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin>
         </Button>
         <Label fx:id="TextTour" prefWidth="150.0" text="Tour length :">
            <HBox.margin>
               <Insets left="10.0" right="20.0" />
            </HBox.margin></Label>
      </children>
      <padding>
         <Insets bottom="20.0" left="20.0" top="20.0" />
      </padding>
   </HBox>
</VBox>
